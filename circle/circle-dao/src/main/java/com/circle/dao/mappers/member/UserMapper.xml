<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.circle.dao.mappers.member.UserMapper">

    <resultMap id="userResult" type="com.circle.entity.member.User" autoMapping="true">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
    </resultMap>

    <select id="getUserByPassword" resultMap="userResult">
        select * from member_user where username = #{username} and password = #{password}
    </select>

</mapper>